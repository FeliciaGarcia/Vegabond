<div class="container">
  <div class="col-md-12 col-sm-12 col-xs-12 user_bio ">

<div class="col-md-4 col-sm-4 col-xs-4 ">
                        <img class="img-responsive z-depth-5" src="<%= @post.user.photo_url %>">
                    </div>
                    <div class="col-md-8 col-sm-8 col-xs-8">
                      <div class="col-md-12 col-sm-12 col-xs-12 city_title text-capitalize text-right"><%=@post.title%></div>

                      <div class="col-md-12 col-sm-12 col-xs-12 text-right user_last_seen text-capitalize">
                      By: <%=@post.user.full_name%>, <%=time_ago_in_words(@post.created_at)%> ago</div>
                    </div>


  </div>
  <hr class="col-md-12 col-sm-12 col-xs-12">
  <div class="city_show_desc col-md-12 col-sm-12 col-xs-12">
                <%= @post.content %>
        </div>
</div>


