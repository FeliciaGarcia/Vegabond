

    <div class="col-md-12">
        <!-- <h3>
        longitude: <%= @city.longitude %> <br>
        latitude: <%= @city.latitude %>
        </h3> -->
<div class="slider">
    <ul class="slides">
      <li>
        <img src="<%= @city.photo_url %>" alt="<%= @city.title %>"> <!-- random image -->
        <div class="caption center-align">
          <h1 class="text-uppercase"><%= @city.title %></h1>
        </div>
      </li>
      </ul>
      </div>


    <div class="container">
        <div class="col-md-12">
            <p>
                <span class="col-md-12 center">Description</span>
                 <%= @city.description %>
            </p>
        </div>
        <div class="city_posts">
            <% @posts.each do |post| %>
            <div class="col-md-12 comment-section">
                <div class="col-md-6">
                    <img src="<%= post.user.photo_url %>" style="height:100px;width:100px;">

                </div>
                <div class="col-md-6">
                    <p class="text-capitalize"><%= link_to post.title, city_post_path(@city, post) %>,  <%= time_ago_in_words(Time.now) %></p>
                    <p><%= post.content %></p>

                </div>

                <hr>
            </div>
<hr>
            <% end %>
        </div>
    </div>
    </div>

