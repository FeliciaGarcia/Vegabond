<div class="col-md-12 col-sm-12 col-xs-12 center login-form">

<%= form_for [@city, @post] do |f| %>
<div class="col-md-6 col-sm-8 col-xs-12 z-depth-4">

  <div>
    <%= f.label :title, :class => 'left' %>
    <%= f.text_field :title, :required => true %>
  </div>

  <div>
    <%= f.label :content, :class => 'left' %>
    <%= f.text_field :content, :required => true%>
  </div>

  <%= f.submit "Add Post", :class => 'btn  waves-effect waves-light btn-custom'%>
    </div>
<% end %>
  </div>

